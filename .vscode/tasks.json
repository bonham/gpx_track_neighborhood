{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "pytest-coverage",
      "type": "shell",
      "command": "${workspaceFolder}/python/venvx/Scripts/pytest.exe",
      "options": {
        "cwd": "${workspaceFolder}/python",
      },
      "args": [
        "--cov=src",
        "--cov-report",
        "html",
      ],
    }
  ]
}